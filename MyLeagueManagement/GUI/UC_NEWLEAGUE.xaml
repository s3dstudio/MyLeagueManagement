                            <ImageBrush x:Name="Club_Cover_New" ImageSource="{Binding CoverImage}"/>
                        </Grid.Background>
                        <Button x:Name="Btn_Edit_Cover" Click="Btn_Edit_Cover_Click" ToolTip="Edit Club cover photo" Width="40" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF7C7C7C" Padding="0">
                            <materialDesign:PackIcon Width="35" Height="35" Kind="Pencil" Foreground="WhiteSmoke" />
                        </Button>
                    </Grid>

                    <Grid x:Name="LogoClub"
                                    Margin="6,0,0,-100"
                                    Width="180" Height="180" HorizontalAlignment="Center">
                        <Border CornerRadius="90" BorderThickness="1"  BorderBrush="#FFBBBBBB" Background="White"/>


                        <!--<Image Source="Liverpool.png" Width="70" Height="70"/>-->
                        <Ellipse Width="110" Height="110" StrokeThickness="0.5" Stroke="White" >
                            <Ellipse.Fill>
                                <ImageBrush x:Name="Img_Club_Logo" ImageSource="{Binding Logo}" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>


                    <Button BorderThickness="0" x:Name="Btn_AddLogoClub" Click="Btn_AddLogoClub_Click"
                                    Height="84" Width="168" Grid.Row="0" Margin="6,0,0,-184" Visibility="Visible"
                                    materialDesign:ButtonAssist.CornerRadius="0 0 84 84" HorizontalAlignment="Center"
                                    Background="#99000000">
                        <materialDesign:PackIcon Kind="Camera" Width="35" Height="30"  />
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}">
                                <Setter Property="Visibility" Value="Hidden"></Setter>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding ElementName=LogoClub, Path=IsMouseOver}" Value="True"/>

                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding ElementName=LogoClub, Path=IsMouseOver}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding ElementName=Btn_AddLogoClub, Path=IsMouseOver}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>

                    <StackPanel Grid.Row="1" Margin="40 60 40 40" >
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="NEW CLUB GENERAL INFORMATION" FontSize="20" Foreground="Black" TextAlignment="Center" />
                            <TextBlock FontSize="16" Text="Edit New Club information here" Foreground="#FF727272" TextAlignment="Center"/>
                        </StackPanel>
                        <TextBox x:Name="Txb_Club_Name" Text="{Binding ClubName, UpdateSourceTrigger=Explicit}"  FontSize="18" materialDesign:HintAssist.Hint="Club Name"
                     materialDesign:HintAssist.HintOpacity=".6"       
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="#899C9292" Margin="60,20,60,0" Background="#FFF3F3F3" />
                        <TextBox x:Name="Txb_Stadium" Background="#FFF3F3F3" Text="{Binding Stadium, UpdateSourceTrigger=Explicit}" FontSize="18" materialDesign:HintAssist.Hint="Stadium"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="#899C9292" Margin="60,20,60,0" />

                        <TextBox x:Name="Txb_Manager" Text="{Binding Manager, UpdateSourceTrigger=Explicit}" FontSize="18" materialDesign:HintAssist.Hint="Manager"
                     materialDesign:HintAssist.HintOpacity=".6"      
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" Background="#FFF3F3F3" BorderBrush="#899C9292" Margin="60,20,60,0" />
                        <StackPanel Orientation="Horizontal" Margin="0 40 0 0" Width="300" FlowDirection="RightToLeft">
                            <Button Content="CANCEL" x:Name="Btn_Cancel" Click="Btn_Cancel_Click" Width="130" Height="40"
                                    BorderThickness="1.2"  
                              materialDesign:ShadowAssist.ShadowDepth="Depth0" Command="materialDesign:DialogHost.CloseDialogCommand"
                            materialDesign:ButtonAssist.CornerRadius="20" BorderBrush="#FF4D4D4D" Background="White" Foreground="#FF4D4D4D" FontSize="16">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                        False
                                    </system:Boolean>
                                </Button.CommandParameter>
                            </Button>

                            <Button x:Name="Btn_Confirm" Click="Btn_Confirm_Click" Content="CONFIRM" Width="130" Height="40"
                                    BorderThickness="1.2" Margin="40 0 0 0"  Command="materialDesign:DialogHost.CloseDialogCommand"
                              materialDesign:ShadowAssist.ShadowDepth="Depth0"
                            materialDesign:ButtonAssist.CornerRadius="20" BorderBrush="#FF4D4D4D" Background="White" Foreground="#FF4D4D4D" FontSize="16">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                        True
                                    </system:Boolean>
                                </Button.CommandParameter>
                            </Button>

                        </StackPanel>
                    </StackPanel>

                </Grid>

            </materialDesign:Card>

        </materialDesign:DialogHost.DialogContent>
    </materialDesign:DialogHost>
</UserControl>
