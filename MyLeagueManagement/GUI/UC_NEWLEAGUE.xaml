                            <Grid Grid.Row="0">
                                <Grid.Background>
                                    <ImageBrush x:Name="Img_League_Cover" ImageSource="zozd74mt2nl41.jpg" Stretch="UniformToFill"/>
                                </Grid.Background>
                                <Grid  Height="60"  VerticalAlignment="Bottom" Margin="260,0,0,0">
                                    <TextBlock x:Name="League_Name" FontSize="29" Text="Premier League" Foreground="White"></TextBlock>
                                    <Button x:Name="Btn_Add_League_Cover" Click="Btn_Add_League_Cover_Click" Width="40" Height="40" Margin="0,0,20,20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Padding="0" HorizontalAlignment="Right" >
                                        <materialDesign:PackIcon Width="35" Height="35" Kind="Pencil" Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                    </Button>
                                </Grid>
                            </Grid>

                            <Ellipse x:Name="Img_LogoC" Grid.Row="0"  Width="180" Height="180" StrokeThickness="1" Stroke="#FFC7C7C7" Margin="40,0,0,-220" HorizontalAlignment="Left" >
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="Img_Logo" ImageSource="pre.png" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>


                            <Button BorderThickness="0" x:Name="Btn_AddLogo" Click="Btn_AddLogo_Click"
                                    Height="84" Width="168" Grid.Row="0" Margin="46,0,0,-304"
                                    materialDesign:ButtonAssist.CornerRadius="0 0 84 84" HorizontalAlignment="Left"
                                    Background="#99000000">
                                <materialDesign:PackIcon Kind="Camera" Width="35" Height="30"  />
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}">
                                        <Setter Property="Visibility" Value="Hidden"></Setter>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding ElementName=Img_LogoC, Path=IsMouseOver}" Value="True"/>

                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding ElementName=Img_LogoC, Path=IsMouseOver}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding ElementName=Btn_AddLogo, Path=IsMouseOver}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                            </Button>

