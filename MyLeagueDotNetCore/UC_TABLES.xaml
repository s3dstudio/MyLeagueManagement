            <Grid Grid.Column="1" Height="auto">
                <ListView Name="ListViewTable" 
                      Foreground="#DD000000" 
                      Background="{x:Null}" 
                      BorderBrush="#896C6767" 
                      VerticalContentAlignment="Stretch" 
                      VerticalAlignment="Top" 
                      HorizontalContentAlignment="Stretch" 
                      HorizontalAlignment="Left" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn>
                                <GridViewColumnHeader Width="80" Content="Position" Foreground="#BC2E2E2E" HorizontalAlignment="Left">
                                </GridViewColumnHeader>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Position}"  FontWeight="Bold"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="40" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Logo}"></Image>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="170"  DisplayMemberBinding="{Binding ClubName}">
                                <GridViewColumnHeader Content="Club" Foreground="#BC2E2E2E" />
                            </GridViewColumn>
                            <GridViewColumn Width="80">
                                <GridViewColumnHeader Content="Played" Foreground="#BC2E2E2E" HorizontalAlignment="Left" >
                                </GridViewColumnHeader>
                                <GridViewColumn.CellTemplate >
                                    <DataTemplate >
                                        <TextBlock Text="{Binding Plays}"  ></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80">
                                <GridViewColumnHeader Content="Won" Foreground="#BC2E2E2E" HorizontalAlignment="Left" >
                                </GridViewColumnHeader>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate >
                                        <TextBlock Text="{Binding Won}"  HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80">
                                <GridViewColumnHeader Content="Drawn" Foreground="#BC2E2E2E" HorizontalAlignment="Left" >
                                </GridViewColumnHeader>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Drawn}"  HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80">
                                <GridViewColumnHeader Content="Lost" Foreground="#BC2E2E2E" HorizontalAlignment="Left" />
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Lost}"  HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80">
                                <GridViewColumnHeader Content="GF" Foreground="#BC2E2E2E" HorizontalAlignment="Left" >
                                </GridViewColumnHeader>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GF}"  HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80" >
                                <GridViewColumnHeader Content="GA" Foreground="#BC2E2E2E" HorizontalAlignment="Left" >
                                </GridViewColumnHeader>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GA}"  HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80" >
                                <GridViewColumnHeader Content="GD" Foreground="#BC2E2E2E" HorizontalAlignment="Left" >
                                </GridViewColumnHeader>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GD}"  HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80" >
                                <GridViewColumnHeader Content="Points" Foreground="#BC2E2E2E" HorizontalAlignment="Left" >
                                </GridViewColumnHeader>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Points}" FontWeight="Bold" HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                </ListView>
            </Grid>


        </Grid>

    </Grid>
</UserControl>
